<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.zhoujunjiang.grade.mapper.PhoneUserMapper">
    <resultMap id="PhoneUserResultMap" type="org.zhoujunjiang.grade.entity.PhoneUser">
        <id property="id" column="id"/>
        <result property="phone" column="phone"/>
        <result property="code" column="code"/>
        <result property="created_at" column="created_at"/>
    </resultMap>
    <select id="findByPhone" resultType="org.zhoujunjiang.grade.entity.PhoneUser">
        SELECT * FROM phone_user WHERE phone = #{phone}
    </select>

    <insert id="save">
        INSERT INTO phone_user (phone) VALUES (#{phone})
    </insert>
</mapper>
