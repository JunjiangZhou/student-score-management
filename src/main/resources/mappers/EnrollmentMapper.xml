<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.zhoujunjiang.grade.mapper.EnrollmentMapper">
    <insert id="insert" parameterType="org.zhoujunjiang.grade.entity.Enrollment">
        INSERT INTO enrollment (student_id, course_id, semester)
        VALUES (#{studentId}, #{courseId}, #{semester})
    </insert>

    <update id="updateById" parameterType="org.zhoujunjiang.grade.entity.Enrollment">
        UPDATE enrollment
        SET student_id = #{studentId},
            course_id = #{courseId},
            semester = #{semester}
        WHERE id = #{id}
    </update>

    <delete id="deleteById" parameterType="int">
        DELETE FROM enrollment WHERE id = #{id}
    </delete>

    <select id="selectAll" resultType="org.zhoujunjiang.grade.entity.Enrollment">
        SELECT * FROM enrollment
    </select>

    <select id="selectById" parameterType="int" resultType="org.zhoujunjiang.grade.entity.Enrollment">
        SELECT * FROM enrollment WHERE id = #{id}
    </select>
</mapper>